/*轮播图*/
*{ margin:0; padding:0; }
img{ display: block; border:none;}
ul,li{ list-style: none;}

.lubo{ width: 100%; min-width:1000px;clear: both; both;position: relative; height:500px;}
.lubo_box{ position: relative; width: 100%; height:500px;}
.lubo_box li{ float: left;position: absolute; top: 0; left: 0; width: 100%; height:500px;}
.lubo_box li a{ display: block;width: 100%;  height: 100%;}
.lubo_box li a img{ width: 100%; height: 500px;}



