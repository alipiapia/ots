/*圆点*/
.cir_box{ overflow: hidden; position: absolute; z-index: 100;}
.cir_box li{ float: left; width: 30px; height: 4px; margin:0 4px; cursor: pointer; background: #fff;}
.cir_on{ background: #000 !important;}

